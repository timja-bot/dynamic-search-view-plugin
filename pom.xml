    <groupId>com.synopsys.arc.jenkinsci</groupId>
    <artifactId>dynamic-search-view</artifactId>
    <version>${revision}${changelist}</version>
    <name>Dynamic Search View Plugin</name>
    <description>Provides a view with dynamically configurable filters</description>
    <packaging>hpi</packaging>

    <url>https://github.com/jenkinsci/dynamic-search-view-plugin</url>

    <properties>
        <revision>0.4.1</revision>
        <changelist>-SNAPSHOT</changelist>
        <gitHubRepo>jenkinsci/dynamic-search-view-plugin</gitHubRepo>
        <jenkins.version>2.346.3</jenkins.version>
        <spotbugs.effort>Max</spotbugs.effort>
        <spotbugs.failOnError>true</spotbugs.failOnError>
        <spotbugs.threshold>Low</spotbugs.threshold>
    </properties>

